<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huaren.logistics"
    android:installLocation="internalOnly"
    >

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:name="com.huaren.logistics.LogisticsApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@android:style/Theme.NoTitleBar"
      >
    <activity
        android:name=".splash.SplashActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".login.LoginActivity"
        android:label="@string/app_name"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        >
    </activity>
    <activity
        android:name=".main.MainActivity"
        android:label="@string/title_activity_main"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        >
    </activity>
    <activity
        android:name=".downcargo.DownCargoActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_downcargo"
        >
    </activity>
    <activity
        android:name=".cargo.CargoActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_cargo"
        >
    </activity>
    <activity
        android:name=".cargo.CargoOrderActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_cargo"
        >
    </activity>
    <activity
        android:name=".cargo.CargoDetailActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_cargo"
        >
    </activity>
    <activity
        android:name=".uncargo.UnCargoActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_uncargo"
        >
    </activity>
    <activity
        android:name=".uncargo.UnCargoOrderActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_uncargo"
        >
    </activity>
    <activity
        android:name=".uncargo.UnCargoDetailActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_cargo"
        >
    </activity>
    <activity
        android:name=".evaluation.EvaluationActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_evalutaion"
        >
    </activity>
    <activity
        android:name=".evaluation.EvaluationOrderActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_evalutaion"
        >
    </activity>
    <activity
        android:name=".evaluation.EvaluationDetailActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_evalutaion_detail"
        >
    </activity>
    <activity
        android:name=".recycleinput.RecycleInputDetailActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/activity_recycle_input_title"
        />
    <activity
        android:name=".recyclescan.RecycleScanDetailActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/activity_recycle_scan_title"
        />
    <activity
        android:name=".info.InfoActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/title_activity_info"
        >
    </activity>
  </application>
</manifest>
