<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_item_main_function"
        android:layout_width="@dimen/main_gridview_width"
        android:layout_height="@dimen/main_gridview_height"
        android:background="@drawable/test"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tx_item_main_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="@string/test"
        android:textColor="@color/main_item_color"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="normal" />

</LinearLayout>
